{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": false,
    "outDir": "dist",
    "rootDir": "."
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["./public", "./dist"]
}
